@{
    ViewData["Title"] = "Detalhes do Produto";

}

@ViewBag.message

@model HomeIndexViewModel

<div class="container" style="display: flex; justify-content: space-around">

    <div class="col-lg-7" style="background-color: transparent; margin-top: 50px">

        <div class="row gutters-1 justify-content-between">

            <div class="col-lg-10 order-lg-2">
                @foreach (var product in Model.Products)
                {
                    <img class="img-fluid" src="@product.LargeImage" style="max-height : 600px;" />

                }
            </div>

            <div class="col-lg-2 text-center text-lg-left order-lg-1" style="background-color: transparent">

                @foreach (var item in Model.Products)
                {

                    <div class="owl-thumbs" data-slide-id="1">
                        <span class="rounded float-left">
                            <img src="@item.Image" width="164px" height="130px"/>
                        </span>
                    </div>

                    <div class="owl-thumbs" data-slide-id="1">
                        <span class="rounded float-left">
                            <img src="@item.SmallImage" width="164px" height="130px;" style="margin-top: 20px"/>
                        </span>
                    </div>

                    <div class="owl-thumbs" data-slide-id="1">
                        <span class="rounded float-left">
                            <img src="@item.MediumImage" width="164px" height="130px" style="margin-top: 20px" />
                        </span>
                    </div>

                    <div class="owl-thumbs" data-slide-id="1">
                        <span class="rounded float-left">
                            <img src="@item.LargeImage" width="164px" height="130px" style="margin-top: 20px" />
                        </span>
                    </div>
                }
            </div>

        </div>
    </div>

    <div class=" col-6" style="background-color: transparent; margin: 0px 30px; padding-top: 50px;">
        @foreach (var product in Model.Products)
        {
            <p style="font-size: 1.75rem">@product.Name</p>
            <p style="font-weight: 400; font-size: 1.05rem">@product.ShortDescription</p>
            <p>Vendido e entregue por:  </p>
            <p style="font-weight: 700; font-size: 2rem">R$@product.SellingPrice.ToString("N2")</p>
            <p>Descrição do Produto @product.Details</p>

            <button type="button" class="btn-square">Comprar</button>
        }
    </div>
</div>