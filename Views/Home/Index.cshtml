@{
ViewData["Title"] = "Home Page";
}

@model HomeIndexViewModel
<div class="container-fluid" style="padding-right: 0px !important; padding-left: 0px !important">
    <div class="bd-example" style="margin-top: 0px;">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://source.unsplash.com/D6Bk1A3-gMA/2300x700" class="d-block w-100" alt="...">
                    <div class="carousel-caption flexslider"
                        style="color: white; font-weight: 700; font-size: 1.5rem; font-family: 'Libre Baskerville', serif">
                        <p>Quer evitar a multidão da 25 de Março?</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://source.unsplash.com/HAIPJ8PyeL8/2300x700" class="d-block w-100" alt="...">
                    <div class="carousel-caption flexslider"
                        style="color: white; font-weight: 700; font-size: 1.5rem; font-family: 'Libre Baskerville', serif">
                        <h5>sem sair do conforto da sua casa.</h5>
                        <p>Compre os produtos da 25 de Março com os mesmos preços da 25 de Março</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://source.unsplash.com/_3Q3tsJ01nc/2300x700" class="d-block w-100" alt="...">
                    <div class="carousel-caption flexslider"
                        style="color: white; font-weight: 700; font-size: 1.5rem; font-family: 'Libre Baskerville', serif">
                        <h5>Third slide label</h5>
                        <p>Faça compras nos maiores polos de vendas da América Latina à preço de atacado.</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <section class="py-6" style="background-color: transparent;">

        <div class="container py-lg-4 mb-4" style="background-color: white">
            <p style="font-weight: 700; font-size: 1.75rem; color: rgba(72,72,72,0.6) !important; 
            font:family: 'Libre Baskerville', serif !important"> Visite as melhores
                Lojas nas melhores
                regiões.
            </p>

            <div class="row swiper-container mx-n2 pt-3" style="background-color: transparent;">
                @foreach (var locality in Model.Locations)
                {
                <div class="swiper-slide h-auto px-2 swiper-slide-active" data-swiper-slide-index="0"
                    style="width: 250px; margin-right: 10px; margin-left: 25px;">
                    <div class="card card-poster gradient-overlay hover-animate mb-4 mb-lg-0">
                        <a href="category.html" class="tile-link"></a>
                        <img src="@locality.ImageLocality" alt="Card image" class="bg-image">
                        <div class="card-body overlay-content">
                            <h6 class="card-title text-shadow text-uppercase" style="font-size: 1rem;">@locality.Street
                            </h6>
                            <p class="card-text text-sm">@locality.NickName</p>
                        </div>
                    </div>
                </div>
                }

            </div>
    </section>


    <div class="row">
        <div class="container col-12 center-page" style="margin-top: 120px;">
            <p style="font-weight: 700; font:family:'Libre Baskerville', serif !important; 
            font-size: 1.75rem; color: rgba(72,72,72,0.6) !important;"> Visite as melhores Lojas nas melhores regiões.
            </p>
            <section class="container py-lg-4 mb-4">
                <div class="row">

                    @foreach (var store in Model.Stores)
                    {
                    <div class="col-md-3 col-sm-4 col-6">
                        <a class="box-shadow-sm d-block bg-white pb-sm-4 py-sm-4 
                        mb-grid-gutter my-grid-gutter ml-auto mx-auto mr-auto mx-auto"
                            href="/store/storedetail/@store.StoreId" style="box-sizing: border-box;">
                            <img class="d-block mx-auto img-fluid" src="@store.Image"
                                style="max-width: 150px; height: 80px;" />
                            <p class="name-store">@store.Name</p>
                        </a>
                    </div>
                    }
                </div>
            </section>

        </div>
    </div>
</div>

<div class="container-fluid px-lg-5 px-xl-7 py-6">
    <div class="row">
        <div class="col-lg-10 col-xl-8 text-center mx-auto">
            <h2 class="display-3 mb-5">Aqui quem faz o "rapa" é Você</h2>
            <p class="lead text-muted mb-6">
                Compre no Brás, 25 de Março e Santa Ifigênia sem sair do conforto de sua casa, esqueça
                super lotação, transtornos e até assaltos.
                Entregamos o produto em sua casa.
            </p>

        </div>

    </div>
</div>


<div class="container-fluid" style="background-color: transparent; margin-top: 50px; height: auto">

    <div class="row" style="background-color: #ededed; padding: 20px;">

        <div class="container">
            <p style="color: rgba(72,72,72,0.6); padding-top: 15px; text-align: center; font-family:'Libre Baskerville', serif; font-weight: 700; 
                    font-size: 1.55rem;">
                Veja alguns dos nossos produtos <bold> direto da 25 de Março</bold>
            </p>
            <div id="slideCard">
                <div class="your-class">
                    @foreach (var product in Model.Products)
                    {
                    <div class="card mb-4 bg-white rounded div-product" style="margin-right: 20px; margin-top: 50px;">
                        <img class="img-fluid" src="@product.Image" style="width: 233px; height: 194px" />
                        <i class="far fa-heart heart-icon-card"></i>
                        <div class="card-body card-product-shadow">
                            <a href="/product/productdetails/@product.ProductId" style="text-decoration: none; ">
                                <p class="card-title product-card-title">@product.Name</p>
                                <p class="card-text product-card-text">R$@product.SellingPrice</p>
                                <p class="card-subtitle product-card-subtitle">@product.ShortDescription</p>

                                <hr style="background-color: black">

                            </a>
                            <div class="row icon-card">
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>

        </div>
        <div class="container" style="text-align: center;">
            <a href="#slideCard" data-slide="prev">
                <span type="button" class="btn-square" style="text-align: center"><i
                        class="fas fa-chevron-left"></i></span>
            </a>
            <a href="#slideCard" data-slide="next">
                <span type="button" class="btn-square" style="text-align: center"><i
                        class="fas fa-chevron-right"></i></span>
            </a>
        </div>
    </div>
    <div>

    </div>
</div>
</div>